function ajax(callback){
$.ajax({
  headers:
  {
    "Authorization":"Bearer " + access_token
  },

  url: "https://api.fitbit.com/1/user/-/activities/steps/date/today/1m.json",
  dataType: 'json',
  success: function(data) {
  callback(data);
  },
